%h2 Edit a Sit
.col-lg12.col-md-12.col-sm12
  .col-lg6.col-md-6.col-sm-6.col-sm-offset-3.col-md-offset-3.col-lg-offset-3
    = form_for @sit, url: "/sits/#{@sit.id}", method: :put do |f|
      = f.label "Date of sit"
      = f.date_field :date, class: "form-control"
      %br
      = f.label "Start Time"
      = f.time_select :start_time, class: "form-control"
      %br
      = f.label "End Time"
      = f.time_select :end_time, class: "form-control"
      %br
      = f.label "Status"
      = f.select :status, options_for_select(['SENT', 'WITHDRAWN']), class: "form-control"
      %br
      = f.submit "EDIT", class: "form-control"
