= nested_form_for(@family) do |f|

  %h2 Add New Family
  .col-lg4.col-md-4.col-sm-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4

    .panel.form_group
    = form_for(@family) do |f|
      = f.label :name
      = f.text_field :name, class: "form-control"
    %br
    .col-lg12.col-md-12.col-sm-12
      = f.fields_for :kids do |i|    
        = i.label :name
        = i.text_field :name, class: "form-control"

        = i.label :age
        = i.number_field :age, class: "form-control"

        = i.label :gender
        = i.text_field :gender, class: "form-control"

        = i.label :comments
        = i.text_field :comments, class: "form-control"
        %br
        %br
        = i.link_to_remove "Remove this kid", class: "btn btn-default green"
        %br
        %br
      = f.link_to_add "Add a kid", :kids, class: "btn btn-default green"
    %br
    %br
    = f.submit 'Save', class: "btn btn-default top1em"
    %br
    %br

