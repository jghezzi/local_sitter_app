%h2 Kid Details
.col-lg8.col-md-8.col-sm-8.col-sm-offset-2.col-md-offset-2.col-lg-offset-2
  %table
    %tbody
      %tr
        %th Name:
        %th Age:
        %th Gender:
        %th Comments:
        %th Family:
      %tr
        %td{:width=>"20%"} 
          = @kid.name 
        %td{:width=>"20%"}
          = @kid.age
        %td{:width=>"20%"}
          = @kid.gender
        %td{:width=>"20%"}
          = @kid.comments
        %td{:width=>"20%"}
          = @kid.family.name
  %br
  %br
  .col-lg6.col-md-6.col-sm-6.col-sm-offset-3.col-md-offset-3.col-lg-offset-3
    = link_to 'Edit Kid', edit_kid_path(@kid), class: "btn btn-default green", method: :get
    %br
    %br
    = link_to 'Delete Kid', kid_path(@kid), class: "btn btn-default green", method: :delete
